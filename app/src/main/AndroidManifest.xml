<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.melonchan.buffalo_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_b"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_buffalo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreen">

        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ResultActivity"
            android:label="@string/title_activity_result"
            android:theme="@style/SplashScreen" />
        <activity
            android:screenOrientation="portrait"
            android:name=".VocabActivity"
            android:label="@string/title_activity_vocab"
            android:theme="@style/SplashScreen"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".DeviceActivity"
            android:label="@string/title_activity_device"
            android:theme="@style/SplashScreen"></activity>
    </application>

</manifest>