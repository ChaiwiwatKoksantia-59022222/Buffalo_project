<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.melonchan.buffalo_project.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mainScreen_text_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:fontFamily="sans-serif-bold"
                android:text="@string/result_main_title"
                android:textSize="36dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mainScreen_text_little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/result_sub_title"
                android:textSize="16dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#78000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <LinearLayout
                android:id="@+id/result_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_left_arrow"
                    android:tint="#78000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="กลับ"
                    android:textColor="#78000000"
                    android:textSize="20dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="53dp"
        android:layout_marginTop="100dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="6dp"
                android:layout_height="257dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="25dp"
                android:background="@color/tabColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="83dp"
                        android:layout_marginRight="33dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="13dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/result_text_day1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="30dp"
                                android:text="DATE"
                                android:textColor="@color/tabColor"
                                android:textSize="17dp" />

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp">


                        </android.support.v7.widget.CardView>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:text="@string/result_day1"
                                android:textColor="@color/tabColor"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="83dp"
                        android:layout_marginRight="33dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="13dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/result_text_day2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="30dp"
                                android:text="DATE"
                                android:textColor="@color/tabColor"
                                android:textSize="17dp" />

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp">


                        </android.support.v7.widget.CardView>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:text="@string/result_day2"
                                android:textColor="@color/tabColor"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="83dp"
                        android:layout_marginRight="33dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="13dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="30dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/result_text_day3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="DATE"
                                    android:textColor="@color/tabColor"
                                    android:textSize="17dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginTop="10dp"
                                    android:text="ถึง"
                                    android:textColor="@color/tabColor"
                                    android:textSize="17dp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/result_text_day4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="DATE"
                                    android:textColor="@color/tabColor"
                                    android:textSize="17dp" />


                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp">


                        </android.support.v7.widget.CardView>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:text="@string/result_day3"
                                android:textColor="@color/tabColor"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>


                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
