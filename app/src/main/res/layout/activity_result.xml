<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.melonchan.buffalo_project.ResultActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_centerHorizontal="false"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="sans-serif-bold"
                android:id="@+id/mainScreen_text_big"
                android:layout_gravity="left|bottom"
                android:textSize="36dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result_main_title"
                />
            <TextView
                android:fontFamily="sans-serif-light"
                android:id="@+id/mainScreen_text_little"
                android:layout_marginTop="0dp"
                android:textSize="16dp"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result_sub_title"
                />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_bar"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#78000000"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <LinearLayout
                android:id="@+id/result_back_btn"
                android:paddingLeft="10dp"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left_arrow"
                    android:tint="#78000000"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="#78000000"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="กลับ"
                    />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_marginTop="100dp"
        android:layout_marginBottom="53dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginLeft="38dp"
                android:layout_marginTop="25dp"
                android:background="@color/tabColor"
                android:layout_width="6dp"
                android:layout_height="257dp"/>

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="83dp"
                        app:cardElevation="0dp"
                        android:layout_marginRight="33dp"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/tabColor"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            app:cardCornerRadius="13dp"
                            app:cardElevation="0dp"
                            android:layout_margin="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/result_text_day1"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DATE"
                                android:textSize="17dp"
                                android:textColor="@color/tabColor"
                                android:layout_marginLeft="0dp"
                                />

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="20dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <android.support.v7.widget.CardView
                            app:cardElevation="0dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                        </android.support.v7.widget.CardView>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="20dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <android.support.v7.widget.CardView
                            app:cardElevation="0dp"
                            app:cardCornerRadius="15dp"
                            android:layout_width="match_parent"
                            android:layout_margin="4dp"
                            android:layout_height="match_parent">

                            <TextView

                                android:textSize="18dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/result_day1"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/tabColor"
                                android:textStyle="bold"
                                />

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="83dp"
                        app:cardElevation="0dp"
                        android:layout_marginRight="33dp"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/tabColor"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            app:cardCornerRadius="13dp"
                            app:cardElevation="0dp"
                            android:layout_margin="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/result_text_day2"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DATE"
                                android:textSize="17dp"
                                android:textColor="@color/tabColor"
                                android:layout_marginLeft="0dp"
                                />

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="20dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <android.support.v7.widget.CardView
                            app:cardElevation="0dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                        </android.support.v7.widget.CardView>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="20dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <android.support.v7.widget.CardView
                            app:cardElevation="0dp"
                            app:cardCornerRadius="15dp"
                            android:layout_width="match_parent"
                            android:layout_margin="4dp"
                            android:layout_height="match_parent">

                            <TextView

                                android:textSize="18dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/result_day2"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/tabColor"
                                android:textStyle="bold"
                                />

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="83dp"
                        app:cardElevation="0dp"
                        android:layout_marginRight="33dp"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/tabColor"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.CardView
                            app:cardCornerRadius="13dp"
                            app:cardElevation="0dp"
                            android:layout_margin="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_gravity="center_horizontal"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="0dp">

                                <TextView
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/result_text_day3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DATE"
                                    android:textSize="17dp"
                                    android:textColor="@color/tabColor"
                                    />

                                <TextView
                                    android:textStyle="bold"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ถึง"
                                    android:textSize="17dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/tabColor"
                                    />


                                <TextView
                                    android:layout_gravity="center_horizontal"
                                    android:id="@+id/result_text_day4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DATE"
                                    android:textSize="17dp"
                                    android:textColor="@color/tabColor"
                                    />



                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="20dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        android:layout_width="40dp"
                        android:layout_height="40dp">
                        <android.support.v7.widget.CardView
                            app:cardElevation="0dp"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                        </android.support.v7.widget.CardView>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="20dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="20dp"
                        app:cardBackgroundColor="@color/tabColor"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <android.support.v7.widget.CardView
                            app:cardElevation="0dp"
                            app:cardCornerRadius="15dp"
                            android:layout_width="match_parent"
                            android:layout_margin="4dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:textSize="18dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/result_day3"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:textColor="@color/tabColor"
                                android:textStyle="bold"
                                />

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>



                </RelativeLayout>

            </LinearLayout>



        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
