<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#398e32</item>
        <item name="colorPrimaryDark">#398e32</item>
        <item name="colorAccent">#398e32</item>
    </style>

    <style name="bottomBar" >
        <item name="colorPrimary">#398e32</item>
        <item name="colorPrimaryDark">#398e32</item>
        <item name="colorAccent">#398e32</item>
    </style>

    <style name="mainButton" >
        <item name="colorControlHighlight">#a2ffffff</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="colorPrimary">#398e32</item>
        <item name="colorPrimaryDark">#398e32</item>
        <item name="colorAccent">#398e32</item>
    </style>

    <style name="whiteButton" >
        <item name="colorControlHighlight">#c1d9d9d9</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="colorPrimary">#398e32</item>
        <item name="colorPrimaryDark">#398e32</item>
        <item name="colorAccent">#398e32</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
